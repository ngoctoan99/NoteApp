<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.CreatNoteFragment">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="500dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <EditText
            android:id="@+id/edtTitle"
            android:layout_width="340dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_shape"
            android:hint="Title"
            android:maxLines="1"
            android:padding="5dp"
            ></EditText>

        <EditText
            android:id="@+id/edtSubTitle"
            android:layout_width="340dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_shape"
            android:hint="Subtitle.."
            android:padding="5dp"></EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pRed"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/red_doy"></ImageView>

            <ImageView
                android:id="@+id/pGreen"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/green_dot"></ImageView>

            <ImageView
                android:id="@+id/pYellow"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/yellow_dot"></ImageView>
        </LinearLayout>

        <EditText
            android:id="@+id/edtNotes"
            android:layout_width="340dp"
            android:layout_height="250dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_shape"
            android:gravity="start"
            android:hint="Notes.."
            android:padding="15dp"></EditText>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:id="@+id/btnEditSaveNotes"
        android:src="@drawable/ic_baseline_check_24"
        android:backgroundTint="@color/red"
        android:layout_margin="25dp"
        android:layout_gravity="bottom|right"
        android:layout_height="wrap_content"></com.google.android.material.floatingactionbutton.FloatingActionButton>
</FrameLayout>